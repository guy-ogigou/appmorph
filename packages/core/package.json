{
  "name": "@appmorph/core",
  "version": "0.1.4",
  "description": "Appmorph backend service",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@appmorph/shared": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "cookie": "^0.6.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.0",
    "simple-git": "^3.22.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cookie": "^0.6.0",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "@types/node": "^20"
  }
}
