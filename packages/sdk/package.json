{
  "name": "@appmorph/sdk",
  "version": "0.1.3",
  "description": "Appmorph SDK - Embeddable widget for AI-powered app customization",
  "type": "module",
  "main": "./dist/appmorph.umd.cjs",
  "module": "./dist/appmorph.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/appmorph.js",
      "require": "./dist/appmorph.umd.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@appmorph/shared": "workspace:*",
    "preact": "^10.19.3"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.2",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.1"
  }
}
